{
  "services": [
    {
      "name": "backend",
      "source": "./backend",
      "start": "node server.js",
      "install": "npm install",
      "env": {
        "NODE_ENV": "production"
      }
    },
    {
      "name": "frontend",
      "source": "./frontend",
      "start": "npm run build && npm run start",
      "install": "npm install",
      "env": {
        "NODE_ENV": "production",
        "REACT_APP_API_URL": "https://your-railway-app-url.up.railway.app/api"
      }
    }
  ]
}