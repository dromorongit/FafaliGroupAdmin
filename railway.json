{
  "$schema": "https://railway.app/schema.json",
  "services": [
    {
      "name": "fafali-visa-admin",
      "build": {
        "command": "cd frontend && npm install && npm run build",
        "builder": "nixpacks"
      },
      "start": "node backend/server.js",
      "env": {
        "NODE_ENV": "production"
      },
      "domains": ["fafali-visa-admin.up.railway.app"]
    }
  ],
  "database": {
    "mongodb": {
      "name": "fafali-mongo"
    }
  }
}
